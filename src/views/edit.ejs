<%- include('partials/_header'); %>

<div class="container">
    <div class="mx-auto" style="width: 600px;">
        <div class="card">
            <div class="card-body">
                <form action="/edit/<%= task._id %>" method="POST">
                    <div class="form-group">
                        <input type="text" name="title" placeholder="<%= task.title %>" class="form-control">
                    </div>

                    <div class="form-group">
                        <textarea name="description" cols="80" class="form-control" placeholder="<%= task.description %>"></textarea> 
                    </div>
                    <button type="submit" class="btn btn-primary ">
                        update
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('partials/_footer'); %>